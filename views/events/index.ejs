<% include ../partials/header %>

<div id="frontpage">

<div class="container">
		<div class="container events">
			<h3>Today's Events/Ongoing Events</h3>
		</div>


	<div class="row text-center" style ="display:flex; flex-wrap: wrap; word-wrap: break-word;">
		
		<%	var i = 0;
		events.forEach(function(eve){ 
		 var date = new Date();
		if((eve.eventDateStart < date)&&(date < eve.eventDateEnd)||(date.getDate()=== eve.eventDateStart.getDate())) { 
			i++;%>
		<div class="col-md-3 col-sm-6">
			<div class="thumbnail" id="showbox">
				<img src="<%= eve.image%> ">
			<div class="caption">
				<h4> <%= eve.name %> </h4>
				<p><strong><%= eve.societyName %></strong></p>
				<p>Event Date- <%=eve.eventDateStart.toDateString()%></p>
			</div>	
			<p>
				<a href="/events/<%=eve._id%>" class = "btn btn-primary">More Info</a>
			</p>
			</div>
		</div>
		<% } 	
		 });
		if(i===0){ %>
		<h4>No Events today!</h4>
		<% } %>
	</div>
</div>
	

	<hr class="hrstyle" size="100">


<div class="container">
		<div class="container events">
			<h3>Upcoming Events</h3>
		</div>


	<div class="row text-center" style ="display:flex; flex-wrap: wrap; word-wrap: break-word;">
		
		<%  var i = 0;
		events.forEach(function(eve){ 
		 var date = new Date();
		if(date < eve.eventDateStart && date.getDate()!== eve.eventDateStart.getDate()){
		i++; %>
		<div class="col-md-3 col-sm-6">
			<div class="thumbnail" id="showbox">
				<img src="<%= eve.image%> ">
			<div class="caption">
				<h4> <%= eve.name %> </h4>
				<p><strong><%= eve.societyName %></strong></p>
				<p>Event Date- <%=eve.eventDateStart.toDateString()%></p>
			</div>	
			<p>
				<a href="/events/<%=eve._id%>" class = "btn btn-primary">More Info</a>
			</p>
			</div>
		</div>
		<% } 	
		 }); 
		 if(i===0){ %>
		<h4>No Upcoming Events!</h4>
		<% } %>
	</div>
	<p class="events">
		<a href="/events/new" class="btn btn-success btn-large">Add New Event</a>
	</p>
</div>
	

	<hr class="hrstyle" size="100">


<div class="container">
		<div class="container events">
			<h3>Past Events</h3>
		</div>


	<div class="row text-center" style ="display:flex; flex-wrap: wrap; word-wrap: break-word;">
		
		<%  var i = 0;
		events.forEach(function(eve){ 
		 var date = new Date();
		if(date > eve.eventDateEnd) { 
		 i++;%>
		<div class="col-md-3 col-sm-6">
			<div class="thumbnail" id="showbox">
				<img src="<%= eve.image%> ">
			<div class="caption">
				<h4> <%= eve.name %> </h4>
				<p><strong><%= eve.societyName %></strong></p>
				<p>Event Date- <%=eve.eventDateStart.toDateString()%></p>
			</div>	
			<p>
				<a href="/events/<%=eve._id%>" class = "btn btn-primary">More Info</a>
			</p>
			</div>
		</div>
		<% } 	
		 });
		if(i===0){ %>
		<h4>No Past Events!</h4>
		<% } %>
	</div>
</div>
	
</div>
	
</div>
<% include ../partials/footer %>