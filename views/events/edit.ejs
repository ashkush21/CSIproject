<% include ../partials/header %>
<div class="container">
	<div class="col">
	<h1 style="text-align: center">Edit <%=event.name%></h1>
	<div style="width: 30%; margin: 25px auto;">
	<form action="/events/<%=event._id%>?_method=PUT" method="POST">
		<div class="form-group">
			<label>Event Name</label>
			<input class="form-control" type="text" name="event[name]" value="<%=event.name%>">
		</div>
		<div class="form-group">
			<label>Event Image</label>
			<input class="form-control" type="text" name="event[image]" value="<%=event.image%>">	
		</div>
		<div class="form-group">
			<label>Start Date</label>
			<input class="form-control" type="date" name="event[eventDateStart]" value="<%=event.eventDateStart%>">	
		</div>
		<div class="form-group">
			<label>End Date</label>
			<input class="form-control" type="date" name="event[eventDateEnd]" value="<%=event.eventDateEnd%>">	
		</div>
		<div class="form-group">
			<label>Society Name</label>
			<input class="form-control" type="text" name="event[societyName]" value="<%=event.societyName%>">	
		</div>
		<div class="form-group">
			<label>Venue</label>
			<input class="form-control" type="text" name="event[venue]" value="<%=event.venue%>">	
		</div>
		<div class="form-group">
			<label>Event Description</label>
			<textarea class="form-control" name="event[description]" rows="8"><%=event.description%></textarea>
			<!-- <input class="form-control" type="text" name="event[description]" value="<%=event.description%>"> -->	
		</div>		
		<div class="form-group">
		<input class="btn btn-lg btn-primary btn-default btn-block" type="submit">	
		</div>
		

	</form>
	<a href="/events">Go back</a>
	</div>
		
	</div>
	
</div>
<% include ../partials/footer %>