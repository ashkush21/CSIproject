<% include ../partials/header %>
<div class="container">
	<div class="col">
	<h1 style="text-align: center">Add New Comment <%=event.name%></h1>
	<div style="width: 30%; margin: 25px auto;">
	<form action="/events/<%=event._id%>/comments" method="POST">
		<div class="form-group">
			<input class="form-control" type="text" name="comment[text]" placeholder="text">
		</div>
		<div class="form-group">
		<input class="btn btn-lg btn-primary btn-default btn-block" type="submit">	
		</div>
		

	</form>
	<a href="/events/<%=event._id%>">Go back</a>
	</div>
		
	</div>
	
</div>
